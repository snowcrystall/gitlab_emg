      = expanded_by_default? ? _('Collapse') : _('Expand')
    %p
      = _('Configure limits for Project/Group Import/Export.')
  .settings-content
    = render 'import_export_limits'

= render_if_exists 'admin/application_settings/ee_network_settings'
